{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "paths": {
      "common/*": ["common/*"],
      "config/*": ["config/*"],
      "dao/*": ["dao/*"],
      "domain/*": ["domain/*"],
      "modules/*": ["modules/*"],
      "providers/*": ["providers/*"],
      "utils/*": ["utils/*"],
    }
  },
  "files": [
    "src/declaration.d.ts"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
